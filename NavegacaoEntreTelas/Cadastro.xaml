<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NavegacaoEntreTelas.Cadastro">

    <VerticalStackLayout VerticalOptions="Center" 
     HorizontalOptions="Center">
        <Label Text="Tela de Cadastro" FontSize="40"
          FontAttributes="Bold"
          HorizontalTextAlignment="Center" Margin="0,40"/>
        <Grid RowDefinitions="*,*,*,*,*,*,*" 
         WidthRequest="400">
            <Label Grid.Row="0" Text="Nome Completo"/>
            <Entry Grid.Row="1" 
              Placeholder="Seu nome completo"/>
            <Label Grid.Row="2" Text="Email"/>
            <Entry Grid.Row="3" 
              Placeholder="exemplo@exemplo.com.br"
              Margin="0,0,0,40"/>
            <Label Grid.Row="4" Text="Senha"/>
            <Entry Grid.Row="5" Placeholder="******"
              Margin="0,0,0,40"/>
            <Button Grid.Row="6" Text="Cadastrar"
                    Clicked="OnCadastrarClicked"/>
        </Grid>


    </VerticalStackLayout>

</ContentPage>
