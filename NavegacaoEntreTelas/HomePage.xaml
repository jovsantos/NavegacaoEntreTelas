<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NavegacaoEntreTelas.HomePage">

	<VerticalStackLayout>
		<Grid RowDefinitions="*,*,*" HorizontalOptions="Center" 
			  WidthRequest="400">
			<Image Grid.Row="0" Source="roblox.png"/>
			<Label Grid.Row="1" Text="Seja Bem-vindo(a)!" FontSize="40"
				FontAttributes="Bold" HorizontalTextAlignment="Center"/>
			<Button Grid.Row="2" Text="Sair"
				Clicked="OnSairClicked"/>
		</Grid>
	</VerticalStackLayout>
</ContentPage>
